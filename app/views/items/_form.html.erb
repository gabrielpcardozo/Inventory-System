<%= form_with model: @item, local: true do |form| %>  
  <div class="plural_singular">
    <p>Singular: <%= Item.model_name.human(count: 1)%> </p>
    <p>Plural: <%= Item.model_name.human(count: 2)%> </p>
  </div>
  
  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name, placeholder: "Enter item name" %>
  </div>

  <div>
    <%= form.label :quantity %><br>
    <%= form.number_field :quantity, placeholder: "Enter quantity" %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price, step: "0.01", placeholder: "Enter price" %>
  </div>

  <div>
      <%= form.label :employee_id %><br>
      <%= form.select("employee_id", @employee_configs, {include_blank: 'Selecione...'}) %>
  </div>

  <div>
    <%= form.submit "Enviar" %>
  </div>
<% end %>